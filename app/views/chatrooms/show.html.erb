<div class="container">
  <div class="text-center">
    <h3><%= @chatroom.topic %></h3>
    <hr>
    <% @chatroom.messages.each do |message| %>
      <div>
        <p><%= message.content %></p>
      </div>
    <% end %>

    <hr>

    <%= simple_form_for([@chatroom, @message]) do |f| %>
      <%= f.input :content %>
      <%= f.submit %>
    <% end %>
  </div>
</div>