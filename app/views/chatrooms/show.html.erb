<div class="container">
  <div class="text-center">
    <%= @chatroom.topic %>
    <% @chatroom.messages do |message| %>
      <div>
        <%= message.content %>
        <hr>
      </div>
    <% end %>

    <hr>

    <% simple_form_for[ @chatroom, @message ] do |f| %>
      <%= f.input :content %>
    <% end %>
  </div>
</div>